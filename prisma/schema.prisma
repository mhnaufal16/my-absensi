generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int          @id @default(autoincrement())
  name      String
  email     String       @unique
  password  String
  attendances Attendance[]
}

model Attendance {
  id        Int      @id @default(autoincrement())
  userId    Int
  // photo can be a large base64 string; use LongText for MySQL
  photo     String   @db.LongText
  latitude  Float
  longitude Float
  type      String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
